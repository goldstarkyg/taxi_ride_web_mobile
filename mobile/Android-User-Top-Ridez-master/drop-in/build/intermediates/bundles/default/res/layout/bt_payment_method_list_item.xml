<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/bt_payment_method_list_item_bg"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="16dp"
    android:paddingLeft="16dp">

    <ImageView
        android:id="@+id/bt_payment_method_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="ContentDescription"/>

    <TextView
        style="@style/bt_base_textview_bold"
        android:id="@+id/bt_payment_method_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/bt_payment_method_icon"
        android:layout_toEndOf="@id/bt_payment_method_icon"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:textSize="16sp"
        android:textColor="@color/bt_black"/>

</RelativeLayout>